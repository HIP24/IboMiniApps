{
  "$schema": "https://tauri.app/schemas/tauri-config-1.schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "distDir": "../dist",
    "devPath": "http://localhost:5173/IboMiniApps/"
  },
  "package": {
    "productName": "IboMiniApps",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "IboMiniApps",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.ibo.miniapps"
    }
  }
}
